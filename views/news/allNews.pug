extends ../layouts/common.pug
block content

    .container-sm
        each card in news
            .card.mt-5
                .card-body
                    h4.card-title= card.title
                    p.card-text= card.description
                    a.card-link(href='/news/' + card.id) View more
                    a.card-link(href='#') Edit
                    a.card-link(href='#') Delete